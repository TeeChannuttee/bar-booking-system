@{
    ViewData["Title"] = "Check-in";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0 text-center">
                        <i class="bi bi-qr-code-scan"></i> Check-in
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Manual Input -->
                    <form asp-action="CheckIn" method="post">
                        <div class="mb-3">
                            <label class="form-label">รหัสการจอง</label>
                            <input type="text" name="bookingCode" class="form-control form-control-lg text-center"
                                   placeholder="BK20241225001" required autofocus />
                        </div>
                        <button type="submit" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-check-lg"></i> Check-in
                        </button>
                    </form>

                    <div class="text-center my-4">
                        <span class="text-muted">— หรือ —</span>
                    </div>

                    <!-- QR Scanner -->
                    <div class="text-center">
                        <button type="button" class="btn btn-outline-primary btn-lg"
                                onclick="startQRScanner()">
                            <i class="bi bi-camera"></i> Scan QR Code
                        </button>
                    </div>

                    <!-- QR Scanner Area (Hidden by default) -->
                    <div id="qrScannerArea" style="display:none;" class="mt-3">
                        <video id="qrVideo" class="w-100 border rounded" style="max-height: 300px;"></video>
                        <button type="button" class="btn btn-danger mt-2" onclick="stopQRScanner()">
                            หยุด Scanner
                        </button>
                    </div>
                </div>
            </div>

            <!-- Recent Check-ins -->
            @if (ViewBag.RecentCheckIns != null)
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h6 class="mb-0">Check-in ล่าสุด</h6>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var checkin in ViewBag.RecentCheckIns)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <strong>@checkin.BookingCode</strong><br>
                                            <small>@checkin.User.FullName - โต๊ะ @checkin.Table.TableNumber</small>
                                        </div>
                                        <div class="text-end">
                                            <small class="text-muted">
                                                @checkin.CheckInTime?.ToString("HH:mm")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/html5-qrcode"></script>
    <script>
        let html5QrCode;

        function startQRScanner() {
            document.getElementById('qrScannerArea').style.display = 'block';

            html5QrCode = new Html5Qrcode("qrVideo");
            html5QrCode.start(
                { facingMode: "environment" },
                {
                    fps: 10,
                    qrbox: { width: 250, height: 250 }
                },
                (decodedText, decodedResult) => {
                    // QR code scanned
                    document.querySelector('input[name="bookingCode"]').value = decodedText;
                    stopQRScanner();
                    document.querySelector('form').submit();
                },
                (errorMessage) => {
                    // parse error, ignore
                }
            ).catch((err) => {
                console.log(`Unable to start scanning: ${err}`);
            });
        }

        function stopQRScanner() {
            if (html5QrCode) {
                html5QrCode.stop();
                document.getElementById('qrScannerArea').style.display = 'none';
            }
        }
    </script>
}
@model List<ApplicationUser>
@{
    ViewData["Title"] = "จัดการสมาชิก";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people"></i> จัดการสมาชิก</h2>
        <div>
            <button type="button" class="btn btn-success" onclick="exportUsers()">
                <i class="bi bi-download"></i> Export
            </button>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createUserModal">
                <i class="bi bi-person-plus"></i> เพิ่มสมาชิก
            </button>
        </div>
    </div>

    <!-- Search & Filter -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <input type="text" name="search" class="form-control"
                           placeholder="ค้นหา: ชื่อ, อีเมล, เบอร์โทร" value="@ViewBag.Search" />
                </div>
                <div class="col-md-3">
                    <select name="tier" class="form-select">
                        <option value="">ทุกระดับ</option>
                        <option value="Bronze">Bronze</option>
                        <option value="Silver">Silver</option>
                        <option value="Gold">Gold</option>
                        <option value="Platinum">Platinum</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="role" class="form-select">
                        <option value="">ทุก Role</option>
                        <option value="Admin">Admin</option>
                        <option value="Manager">Manager</option>
                        <option value="Staff">Staff</option>
                        <option value="Customer">Customer</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> ค้นหา
                    </button>
                    <a href="/Admin/Users" class="btn btn-secondary">
                        <i class="bi bi-arrow-clockwise"></i> รีเซ็ต
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>ชื่อ</th>
                            <th>อีเมล</th>
                            <th>เบอร์โทร</th>
                            <th>ระดับ</th>
                            <th>คะแนน</th>
                            <th>Role</th>
                            <th>สมัครเมื่อ</th>
                            <th>Login ล่าสุด</th>
                            <th>การจอง</th>
                            <th>การดำเนินการ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td><small>@user.Id.Substring(0, 8)...</small></td>
                                <td>
                                    <strong>@user.FullName</strong>
                                    @if (!user.EmailConfirmed)
                                    {
                                        <span class="badge bg-warning">Unverified</span>
                                    }
                                </td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    @{
                                        var tierColor = user.MemberTier switch
                                        {
                                            "Platinum" => "dark",
                                            "Gold" => "warning",
                                            "Silver" => "secondary",
                                            _ => "info"
                                        };
                                    }
                                    <span class="badge bg-@tierColor">@user.MemberTier</span>
                                </td>
                                <td>@user.LoyaltyPoints</td>
                                <td>
                                    @foreach (var role in ViewBag.UserRoles[user.Id])
                                    {
                                        <span class="badge bg-primary">@role</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("dd/MM/yy")</td>
                                <td>
                                    @if (user.LastLoginAt.HasValue)
                                    {
                                        @user.LastLoginAt.Value.ToString("dd/MM/yy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@user.Bookings?.Count ?? 0</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-outline-primary"
                                                onclick="viewUser('@user.Id')" title="ดูข้อมูล">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-warning"
                                                onclick="editUser('@user.Id')" title="แก้ไข">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-info"
                                                onclick="changeRole('@user.Id')" title="เปลี่ยน Role">
                                            <i class="bi bi-shield"></i>
                                        </button>
                                        @if (user.LockoutEnd == null)
                                        {
                                            <button type="button" class="btn btn-outline-danger"
                                                    onclick="lockUser('@user.Id')" title="Lock">
                                                <i class="bi bi-lock"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-outline-success"
                                                    onclick="unlockUser('@user.Id')" title="Unlock">
                                                <i class="bi bi-unlock"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Create User Modal -->
<div class="modal fade" id="createUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">เพิ่มสมาชิกใหม่</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateUser" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">อีเมล</label>
                        <input type="email" name="Email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">ชื่อ-นามสกุล</label>
                        <input type="text" name="FullName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">เบอร์โทร</label>
                        <input type="tel" name="PhoneNumber" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">รหัสผ่าน</label>
                        <input type="password" name="Password" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select name="Role" class="form-select">
                            <option value="Customer">Customer</option>
                            <option value="Staff">Staff</option>
                            <option value="Manager">Manager</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                    <button type="submit" class="btn btn-primary">สร้างสมาชิก</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewUser(id) {
            window.location.href = '/Admin/UserDetails/' + id;
        }

        function editUser(id) {
            window.location.href = '/Admin/EditUser/' + id;
        }

        function changeRole(id) {
            Swal.fire({
                title: 'เปลี่ยน Role',
                input: 'select',
                inputOptions: {
                    'Customer': 'Customer',
                    'Staff': 'Staff',
                    'Manager': 'Manager',
                    'Admin': 'Admin'
                },
                showCancelButton: true,
                confirmButtonText: 'เปลี่ยน'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Post change role
                    $.post('/Admin/ChangeUserRole', {
                        userId: id,
                        role: result.value
                    }, function() {
                        location.reload();
                    });
                }
            });
        }

        function lockUser(id) {
            Swal.fire({
                title: 'Lock User?',
                text: 'ผู้ใช้จะไม่สามารถ login ได้',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Lock'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Admin/LockUser/' + id;
                }
            });
        }

        function unlockUser(id) {
            window.location.href = '/Admin/UnlockUser/' + id;
        }

        function exportUsers() {
            window.location.href = '/Admin/ExportUsers';
        }
    </script>
}

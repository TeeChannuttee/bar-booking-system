@model Booking
@{
    ViewData["Title"] = "ชำระเงินสำเร็จ";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>

                    <h2 class="mb-4">การจองสำเร็จ!</h2>

                    <p class="lead">ขอบคุณที่เลือกใช้บริการ Bar Booking</p>

                    <div class="alert alert-success">
                        <h5>รหัสการจอง: @Model.BookingCode</h5>
                        <p class="mb-0">กรุณาเก็บรหัสนี้ไว้สำหรับการ Check-in</p>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5>📍 @Model.Table.Branch.Name</h5>
                            <p>
                                📅 @Model.BookingDate.ToString("dddd dd MMMM yyyy")<br>
                                ⏰ @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")<br>
                                🪑 โต๊ะ @Model.Table.TableNumber (@Model.Table.Zone)<br>
                                👥 @Model.NumberOfGuests ท่าน
                            </p>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-envelope"></i> ส่งยืนยันการจองไปยังอีเมลของคุณแล้ว<br>
                        <i class="fab fa-line"></i> ส่งการแจ้งเตือนผ่าน LINE Notify แล้ว
                    </div>

                    <div class="d-flex justify-content-center gap-3">
                        <a asp-controller="Booking" asp-action="Details" asp-route-id="@Model.Id"
                           class="btn btn-primary btn-lg">
                            <i class="bi bi-eye"></i> ดูรายละเอียด
                        </a>
                        <a asp-controller="Booking" asp-action="MyBookings"
                           class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-list-check"></i> การจองของฉัน
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

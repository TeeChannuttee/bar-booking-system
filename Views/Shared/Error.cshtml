@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
            <h1 class="mt-4">เกิดข้อผิดพลาด</h1>
            <p class="text-muted">ขออภัย มีบางอย่างผิดพลาด กรุณาลองใหม่อีกครั้ง</p>

            @if (Model?.ShowRequestId ?? false)
            {
                <p class="text-muted small">
                    <strong>Request ID:</strong> <code>@Model?.RequestId</code>
                </p>
            }

            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                <i class="bi bi-house"></i> กลับหน้าหลัก
            </a>
        </div>
    </div>
</div>